<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>http://shorts.jeffkreeftmeijer.com/</loc>
    <lastmod><%= Time.now.strftime '%Y-%m-%d' %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>1</priority>
  </url>
  <% @articles.reject{ |a| a.metadata['date'].nil? }.sort_by{ |a| a.metadata['date'] }.reverse.each do |article| %>
  <url>
    <loc>http://shorts.jeffkreeftmeijer.com<%= article.url %>/</loc>
    <lastmod><%= article.metadata['date'].strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <% end %>
</urlset>
